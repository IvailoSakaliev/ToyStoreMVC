@model Toy.Models.ViewModels.Product.ProducLIst
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_admin.cshtml";
}


<h2>Products</h2>
<a href="../Admin/Product">Add new Product</a>
<div id="total">
    <h3 id="price"></h3>
</div>
<table class="table">
    <tr>
        <th>
            Code
        </th>
        <th>
            Title
        </th>
        <th>
            Price
        </th>
        <th>
            Date
        </th>
        <th>
            Quantity
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @item.Code
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Date
            </td>
            <td>
                @item.Quantity
            </td>

            <td>
                <span>@Html.ActionLink("Edit", "EditProduct", new { id = item.ID }) |</span>
                <span>@Html.ActionLink("Delete", "DeleteProduct", new { id = item.ID }) |</span>



            </td>
        </tr>
    }

</table>
<div style="text-align:right">
    @Html.Partial("_pageVM")
</div>