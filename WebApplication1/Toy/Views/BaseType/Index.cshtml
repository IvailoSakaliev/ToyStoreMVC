@model Toy.Models.ViewModels.BaseTypes.BaseTypeList
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_admin.cshtml";
}

<h2>List of type</h2>

<a href="../BaseType/Add">Add new Product</a>
<div id="total">
    <h3 id="price"></h3>
</div>
<table class="table">
    <tr>
        <th>
            Name
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @item.Name
            </td>


            <td>
                <span>@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |</span>
                <span>@Html.ActionLink("Delete", "Delete", new { id = item.ID }) |</span>



            </td>
        </tr>
    }

</table>
<div style="text-align:right">
    @Html.Partial("_pageVM")
</div>

