@model Toy.Models.ViewModels.Contacts.ContactVm
@{
    ViewData["Title"] = "SendEmailTOUser";
    Layout = "~/Views/Admin/_admin.cshtml";
}

<h2>Send Answer</h2>
<div class="row">
    <div class="col-md-5">
        <form action="SendEmailTOUser" method="post">
            <div class="form-group">
                <label asp-for="@Model.Message"></label>
                <textarea asp-for="@Model.Message" class="form-control" cols="15" rows="15"></textarea>
                <span asp-validation-for="@Model.Message"></span>
            </div>
            <input class="btn btn-primary" type="submit" name="submit" value="Send" />
        </form>
    </div>
</div>
