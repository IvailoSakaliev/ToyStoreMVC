@model Toy.Models.ViewModels.Product.ProducLIst
@{
    ViewData["Title"] = "Home Page";
}

<script>
    document.getElementById('vid').play();
</script>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner homeCaruser">
        <div class="item active ">
            <img src="~/images/Covers/cover1.jpg" alt="Los Angeles">

        </div>

        <div class="item">
            <img src="~/images/Covers/cover2.jpg" width="100%" alt="Los Angeles">

        </div>

        <div class="item">
            <img src="~/images/Covers/cover3.jpg" alt="Los Angeles">

        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div style="background-image:url(../../images/indexback.jpg); background-size:100%; ">

    <div class="HomeProducts">
        <h4>Топ продукти</h4>
        <div style="padding-top:20px;">
            @foreach (var item in Model.Items)
            {

                <div class="col-md-3">
                    <div class="row img">
                        <a href="../../Order/Details/@item.ID"><img src="@item.Image" alt="Alternate Text" width="200px" height="150px;" /></a>
                    </div>
                    <div class="row title">
                        <p>@item.Title</p>
                    </div>
                    <div class="row">
                        @if (item.Quantity > 0)
                        {
                            <span style="color:green"> В наличност</span>
                        }
                        else
                        {
                            <span style="color:red"> Не е в наличност</span>
                        }
                    </div>
                    <div class="row price">
                        <h4>@item.Price лв.</h4>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row video">
        <div class="col-md-6" style="padding:0px">
            <video id="vid" width="100%"
                   autoplay loop muted>
                <source src="~/images/Video/fasada2.mp4" type="video/mp4" />
            </video>
        </div>
        <div class="col-md-6">
            <P class="indexTextVideo">
                Добре дошли във Вавилонци магазин,</BR>
                тук можете да купите играчки на цени половин.</BR>
                Вземате от нашите играчки увлекателни,</BR>
                както и  куп игри образователни.</BR>
                За вашите дечица малки,</BR>
                вземете от нашите залагалки.</BR>
                за вашите състезазатели,</BR>
                имаме топки за нападатели.</BR>
                Не се чудете вий сега,</BR>
                а играчки си купете на мига.</BR>
            </P>

        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <P class="indexTextVideo">
                За всеки детски каприз</BR>
                предлагаме съответния сюрприз.</BR>
                За вашите бъдещи шампиони,</BR>
                поръчайте от нашите камиони.</BR>
                Поръчайте веднага от нашите коли,</BR>
                за игри и забава чак до зори.</BR>
                За вашите принцеси приказни,</BR>
                имаме чудни предложения,</BR>
                вземете кукли за дълготрайни забавления.</BR>
            </P>
        </div>
        <div class="col-md-6 video" style="padding:0px">
            <video id="vid" width="100%"
                   autoplay loop muted>
                <source src="~/images/Video/fasada.mp4" type="video/mp4" />
            </video>
        </div>
    </div>
</div>

