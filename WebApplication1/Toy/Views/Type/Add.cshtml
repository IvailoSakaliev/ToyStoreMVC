@model Toy.Models.ViewModels.Type.TypeVM
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Admin/_admin.cshtml";
}

<h2>Add</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="BaseModel" class="control-label"></label>
                <select class="form-control" name="basemodel">
                    @foreach (var item in Model.BaseModel)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                    <span asp-validation-for="BaseModel"></span>
            </div>

           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
