@model Toy.Models.ViewModels.User.UserEditVm
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangeDetails</title>
</head>
<body>
    <div class="col-md-6">
        <form id="userInformation" method="post" action="ChangeDetails" enctype="multipart/form-data">
            <div id="userIMGEdit" style="background-image:url(../wwwroot/@Model.Image)">
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" id="email" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label"></label>
                <input asp-for="SecondName" class="form-control" id="email" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" id="email" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" id="email" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" id="email" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="photo" id="file" class="form-control" multiple />
                <span asp-validation-for="Image"></span>
            </div>
            <input type="submit" name="submit" value="Edit" class="form-control btn btn-warning " />

        </form>
        @*<button onclick="ChangeUserDetails()" id="fule" class="btn btn-warning">Edit</button>*@
    </div>
</body>
</html>
